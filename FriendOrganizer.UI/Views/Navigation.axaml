<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="using:FriendOrganizer.UI.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FriendOrganizer.UI.Views.Navigation">

      <ListBox SelectedItem="{Binding SelectedFriend,Mode=TwoWay}" Items="{Binding Friends}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock TextWrapping="Wrap">
              <TextBlock.Text>
                <MultiBinding StringFormat="{} {0} {1}">
                  <Binding Path="FirstName" Mode="TwoWay"/>
                  <Binding Path="LastName" Mode="TwoWay"/>
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
  
</UserControl>
